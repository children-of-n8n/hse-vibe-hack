{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "root": false,
  "extends": "//",
  "files": {
    "includes": [
      "**",
      "!!**/src/shared/ui",
      "!!**/dist",
      "!!**/etc",
      "!!**/node_modules",
      "!!**/public",
      "**/*.js",
      "**/*.jsx",
      "**/*.md",
      "**/*.mdx",
      "**/*.mjs",
      "**/*.ts",
      "**/*.tsx"
    ]
  },
  "linter": {
    "domains": {
      "react": "all"
    },
    "rules": {
      "a11y": "off",
      "style": {
        "useComponentExportOnlyModules": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": ["classList"],
            "functions": ["cn", "clsx", "cva", "tw"]
          }
        }
      },
      "suspicious": {
        "noArrayIndexKey": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "useUniqueElementIds": "off"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "javascript": {
    "globals": ["React"],
    "formatter": {
      "jsxQuoteStyle": "double"
    }
  }
}
